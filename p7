    function onError(data, status)
    {
        alert("Error cargando. Intente de nuevo.");
    }       
 
    $(document).ready(function() {
 
            $.ajax({
                type: "POST",
                url: "http://rufi.com.ve/padron.php",
                cache: false,
                success: onSuccess,
                error: onError
            });
 
